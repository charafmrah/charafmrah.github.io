---
import Layout from "../layouts/Layout.astro";
import Page from "../components/Page.astro";
import MovingCards from "../components/MovingCards";

import "../styles/global.css";

import { cardsData } from "../assets/data/PortfolioData";
import Skills from "../components/home/Skills.astro";
import Contact from "../components/home/Contact.astro";
import About from "../components/home/About.astro";
import Landing from "../components/home/Landing.astro";
---

<Layout>
  <div id="home">
    <Page>
      <Landing />
    </Page>
  </div>
  <div id="projects">
    <Page>
      <MovingCards data={cardsData} client:load />
    </Page>
  </div>
  <div id="about">
    <Page>
      <div class="content">
        <About />
      </div>
    </Page>
  </div>
  <Page>
    <div class="content">
      <Skills />
    </div>
  </Page>
  <div id="contact">
    <Page>
      <div class="content">
        <Contact />
      </div>
    </Page>
  </div>
</Layout>

<script>
  const appHeight = () => {
    const doc = document.documentElement;
    doc.style.setProperty("--page-height", `${window.innerHeight}px`);
  };
  window.addEventListener("resize", appHeight);
  appHeight();
</script>

<style>
  .content {
    max-width: 800px;
  }
</style>
