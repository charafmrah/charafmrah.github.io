---
const id = Astro.props.id;
---

<section id={id} class="page">
  <slot />
</section>

<style>
  .page {
    flex: none;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: var(--page-height);
    max-height: var(--page-height);
    min-height: -webkit-fill-available;
    width: 100vw;
    min-height: -webkit-fill-available;
    scroll-snap-align: start;
    overflow: hidden;
  }
</style>
