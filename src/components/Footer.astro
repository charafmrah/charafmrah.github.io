---
import Bars from "../assets/icons/Bars.astro";
import Close from "../assets/icons/Close.astro";
import { Image, Picture } from "@astrojs/image/components";
---

<footer>
  <nav>
    <div id="nav-links">
      <a class="nav-link" href="/#home" onclick="">
        <span class="nav-link-label rubik-font">Home</span>
        <Image
          class="nav-link-image"
          src={import("../assets/images/home.jpg")}
          alt="Home"
        />
      </a>
      <a class="nav-link" href="/#projects">
        <span class="nav-link-label rubik-font">Projects</span>
        <Image
          class="nav-link-image"
          src={import("../assets/images/projects.jpg")}
          alt="Home"
        />
      </a>
      <!--
        <a class="nav-link" href="/blog">
          <span class="nav-link-label rubik-font">Blog</span>
        <Image
          class="nav-link-image"
          src={import("../assets/images/blog.jpg")}
          alt="Home"
        />
        </a>
       -->
      <a class="nav-link" href="/#about">
        <span class="nav-link-label rubik-font">About</span>
        <Image
          class="nav-link-image"
          src={import("../assets/images/about.jpg")}
          alt="Home"
        />
      </a>
      <a class="nav-link" href="/#contact">
        <span class="nav-link-label rubik-font">Contact</span>
        <Image
          class="nav-link-image"
          src={import("../assets/images/contact.jpg")}
          alt="Home"
        />
      </a>
    </div>
  </nav>

  <button id="nav-toggle" type="button">
    <i class="nav-toggle-icon">
      <Bars />
    </i>
    <i class="nav-close-icon">
      <Close />
    </i>
  </button>
</footer>

<style is:global>
  body[data-nav="true"] > main {
    @apply translate-y-[-100%] md:translate-y-[-50%];
  }

  body[data-nav="true"] > footer > nav > #nav-links {
    transform: translateY(0%) scale(1);
  }

  body[data-nav="true"] > footer > #nav-toggle {
    @apply bg-white;
  }

  body:not([data-nav="true"]) > footer > #nav-toggle > .nav-toggle-icon {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }

  body[data-nav="true"] > footer > #nav-toggle > .nav-close-icon {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
</style>

<style>
  nav {
    @apply absolute  bottom-0 left-0 z-[1] h-[var(--page-height)] w-full overflow-hidden overflow-y-scroll px-12 pt-5 pb-40 md:h-[50vh];
  }

  .nav-link-label {
    font-size: large;
    font-weight: 700;
  }

  #nav-links > .nav-link {
    text-decoration: none;
  }

  #nav-links > .nav-link > .nav-link-label {
    color: white;
    font-size: 1.25rem;
    margin: 0rem;
    text-transform: uppercase;
  }

  #nav-links > .nav-link > .nav-link-image {
    width: max(20vw, 400px);
    aspect-ratio: 1.8 / 1;
    border-radius: 0.5rem;
    margin-top: 0.75rem;
    object-fit: cover;
  }

  #nav-toggle {
    @apply bottom-6 h-20 w-20 bg-orange-400 md:bottom-12;
  }
  #nav-toggle {
    position: fixed;
    z-index: 3;
    left: 50%;
    transform: translateX(-50%);
    border: none;
    border-radius: 5rem;
    outline: none;
    box-shadow: 0rem 0rem 4rem rgba(0 0 0 / 35%);
    cursor: pointer;
    transition: transform, background-color;
    transition-timing-function: ease;
    transition-duration: 400ms;
  }

  #nav-toggle:hover {
    transform: translateX(-50%) scale(1.04);
  }

  #nav-toggle:active {
    transform: translateX(-50%) scale(0.96);
  }

  #nav-links {
    @apply flex flex-col items-center gap-5 md:flex-row;
  }
  #nav-links {
    margin-top: clamp(1rem, 1vw, 2rem);
    padding: 0rem clamp(1rem, 2vw, 2rem);
    transform: translateY(70%) scale(0.9);
    transition: transform 500ms cubic-bezier(0.13, 0.53, 0.38, 0.97);
    justify-content: center;
  }

  #nav-toggle > i {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%) scale(0.9);
    color: rgb(246, 231, 224);
    font-size: 1.75rem;
    opacity: 0;
    transition: transform, opacity;
    transition-timing-function: ease;
    transition-duration: 400ms;
  }
</style>
