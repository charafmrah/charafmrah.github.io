---
import HorizontalPageLayout from "../../layouts/HorizontalPageLayout.astro";
---

<HorizontalPageLayout id={"skills"} class="bg-blue-500">
  <div
    class="component-hidden skills-card flex max-h-[50vh] max-w-3xl flex-col justify-center"
  >
    <div class="tools">
      <div class="circle">
        <span class="red box"></span>
      </div>
      <div class="circle">
        <span class="yellow box"></span>
      </div>
      <div class="circle">
        <span class="green box"></span>
      </div>
    </div>
    <div
      class="flex flex-col justify-center gap-2 p-5 text-lg font-semibold md:text-xl"
    >
      <div>
        <h3 class="">Programming languages:</h3>
        <p>JavaScript - Java - Python - PHP - Kotlin - TypeScript</p>
      </div>
      <div>
        <h3>Technologies:</h3>
        <p>
          React - HTML - CSS - Node.js - Next.js - Express.js - WordPress -
          Android SDK - Flutter - Git - MySQL - SQLite - Firebase - Linux
        </p>
      </div>
    </div>
  </div>
</HorizontalPageLayout>

<style>
  .skills-card {
    width: fit-content;
    height: fit-content;
    margin: 0 auto;
    box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1);
    background-color: #f8fbfe;
    border-radius: 8px;
    z-index: 1;
  }

  .tools {
    display: flex;
    align-items: center;
    position: absolute;
    top: 1.25rem;
    left: 1.25rem;
  }

  .circle {
    padding: 0 4px;
  }

  .box {
    display: inline-block;
    align-items: center;
    width: 10px;
    height: 10px;
    padding: 1px;
    border-radius: 50%;
  }

  .red {
    background-color: #f87171;
  }

  .yellow {
    background-color: #fb923c;
  }

  .green {
    background-color: #34d399;
  }
</style>
