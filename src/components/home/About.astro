---
import HorizontalPageLayout from "../../layouts/HorizontalPageLayout.astro";
---

<HorizontalPageLayout id={"about"}>
  <div class="component-hidden max-w-2xl">
    <div class="box">
      <span></span>
      <div class="content mb-3 text-white">
        <h2 class="text-2xl mb-3 text-white">Who am I?</h2>
        <p class="text-xl">
          I am a software engineer with a passion for creating and building
          innovative projects. With experience in a wide range of languages and
          technologies, I am always looking for new challenges and opportunities
          to grow as a developer. Thank you for visiting and I hope you enjoy
          exploring my work.
        </p>
      </div>
    </div>
  </div>
</HorizontalPageLayout>

<style>
  .box {
    position: relative;
    width: 440px;
    height: 600px;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: 0.5s;
    z-index: 1;
  }

  .box::before {
    content: " ";
    position: absolute;
    top: 0;
    left: 100px;
    width: 50%;
    height: 100%;
    text-decoration: none;
    background: #fff;
    border-radius: 8px;
    transform: skewX(15deg);
    transition: 0.5s;
  }

  .box::after {
    content: "";
    position: absolute;
    top: 0;
    left: 100px;
    width: 50%;
    height: 100%;
    background: #fff;
    border-radius: 8px;
    transform: skewX(15deg);
    transition: 0.5s;
    filter: blur(30px);
  }

  .box:hover:before,
  .box:hover:after {
    transform: skewX(0deg) scaleX(1.3);
  }

  .box:before,
  .box:after {
    background: linear-gradient(315deg, #ffbc00, #ff0058);
  }

  .box span {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 5;
    pointer-events: none;
  }

  .box span::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 0;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    opacity: 0;
    transition: 0.1s;
    animation: animate 2s ease-in-out infinite;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
  }

  .box span::before {
    top: -80px;
    left: 80px;
    width: 100px;
    height: 100px;
    opacity: 1;
  }

  .box span::after {
    content: "";
    position: absolute;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 100%;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    opacity: 0;
    transition: 0.5s;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    animation-delay: -1s;
  }

  .box span:after {
    bottom: -80px;
    right: 80px;
    width: 100px;
    height: 100px;
    opacity: 1;
  }

  .box .content {
    display: flex;
    flex-direction: column;
    position: relative;
    width: 400px;
    height: 508px;
    padding: 20px 40px;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    z-index: 1;
    transform: 0.5s;
    color: #fff;
    justify-content: center;
    align-items: center;
  }
</style>
