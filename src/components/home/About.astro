<style>
  .about-card {
    width: 250px;
    height: 400px;
    background: #fff;
    border-radius: 10px;
    text-align: center;
    transition: all 0.5s;
  }

  .about-card:hover {
    box-shadow: 0 0 20px 1px rgba(0, 0, 0, 0.623);
    background-color: #fb923c;
  }

  .about-card .blob {
    height: 10px;
    width: 75%;
    border-radius: 0 0 30px 30px;
    margin: 0 auto;
    background-color: #fb923c;
    visibility: visible;
    transition: all 0.3s;
  }

  .about-card:hover .blob {
    height: 0;
  }

  .about-card .img {
    display: flex;
    margin: 30px auto 10px auto;
    width: 150px;
    height: 150px;
    background-color: #fb923c;
    border-radius: 50%;
    font-size: 11px;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    transition: all 0.5s;
  }

  .about-card:hover .img {
    width: 100%;
    height: 70%;
    border-radius: 10px 0 0;
    margin: 0 auto;
    background-color: #fff;
    z-index: 99999;
  }

  img {
    margin-top: 15px;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .about-card h3 {
    margin: 0;
    text-align: center;
    padding: 15px 10px;
    font-size: 25px;
    transition: all 0.1s;
    z-index: -99;
    line-height: 17px;
  }

  .about-card span {
    font-size: 18px;
  }

  .about-card:hover h3 {
    opacity: 0;
    width: 100%;
    transition: all 0.4s;
  }

  #socials {
    opacity: 0;
  }

  .about-card:hover > #socials {
    opacity: 1;
    position: relative;
    bottom: 45px;
    text-align: center;
    transition: all 0.6s;
  }
</style>
